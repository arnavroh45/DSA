int matSearch (vector <vector <int>> &mat, int N, int M, int X)
	{
	    // your code here
	    int r = 0;
	    int c = M-1;
	    while(r<N && c>=0)
	    {
	        if(X>mat[r][c])
	            r++;
	        else if(X<mat[r][c])
	            c--;
	        else
	            return 1;
	    }
	    return 0;
	}
